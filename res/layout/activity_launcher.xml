<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:weightSum="2"
    tools:context="com.info.bdnationalid.LauncherActivity" >

    <Button
        android:id="@+id/maleinfo"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#000080"
        android:background="@drawable/button_design"
        android:text="Male Information" />

    <Button
        android:id="@+id/femaleinfo"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#000080"
        android:background="@drawable/button_design"
        android:text="Female Information" />
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:layout_alignParentBottom="true">
  	      
	    <Button
	        android:id="@+id/about"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:textColor="#848482"
	        android:background="@drawable/footer_button_design"
	        android:text="About Developer." />
	</LinearLayout>
	
</LinearLayout>
